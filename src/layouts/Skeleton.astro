---
import "../styles/base.css";
// Components
import Navigation from "../components/Navigation.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";

const { title } = Astro.props.frontmatter || Astro.props;

// Image for footer
import { Image } from "astro:assets";
import beerImg from "../assets/images/beerlabel.jpg";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{title}</title>
  </head>
  <body>
    <header class="max-w-full">Header</header>
    <main class="container mx-auto md:max-w-3xl min-h-screen">
      <slot />
    </main>
    <footer class="static text-stone-100 bg-slate-950 mt-20">
      <div class="static grid grid-cols-3 gap-4">
        <div class="px-4 my-8">
          <Image src={beerImg} alt="Skål!" />
        </div>
        <div class="px-4 my-8">
          <h3>Bryggeriet i garagen</h3>
          <p>bla bla bla...</p>
          <h3>Kontakt</h3>
          <p>Find os på sociale medier</p>
        </div>
        <div class="px-4 my-8">
          <h3>Indhold</h3>
          <nav>
            <ul>
              <li><a href="/">Forside</a></li>
              <li><a href="/bryg">Bryg</a></li>
              <li><a href="/humle">Humle arkiv</a></li>
              <li><a href="/oeltyper">Øltyper</a></li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4 border-t-2 border-slate-800">
        <div class="px-4">left</div>
        <div class="px-4">right</div>
      </div>
    </footer>
  </body>
</html>
