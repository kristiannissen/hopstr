---
/**
 * Beer Styles Component
 */

import { Debug } from "astro:components";
import { Image } from "astro:assets";
import icon from "../assets/images/glass_with_beer.jpg";

let bs = (await Astro.glob("../content/style-guide/*.mdx")) || [];
// Sort styles
bs.sort((a, b) => b.frontmatter.title - a.frontmatter.title);

// Slice array by count or fallback
const { count } = Astro.props || 6;
---

<section class="flex overflow-x-auto">
  {
    bs.slice(0, count).map((s) => (
      <div class="flex-none w-32">
        <article class="flex flex-col items-center">
          <a href={`/oeltyper/${s.frontmatter.slug}`}>
            <Image src={icon} alt="Ã˜l i glas" class="w-16 h-16 rounded-full" />
            <h1 class="font-serif font-semibold">{s.frontmatter.title}</h1>
          </a>
        </article>
      </div>
    ))
  }
</section>
